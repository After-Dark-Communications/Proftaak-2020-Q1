<div>
    <div class="remove-tram-info">
        <h4 class="remove-tram-title">Reparatie Aanmelden voor tram @ViewBag.Tramnumber </h4>
    </div>
    <form method="post" action="/Home/RepairSignUpSend">
        <div class="remove-tram-info">
            <label>Reparatie :</label>
            <select name="repairsize">
                <option value="Groot">Groot</option>
                <option value="Klein">Klein</option>
            </select>
            <label>Reparatie Reden: </label>
            <textarea class="remove-cleanupinfo" classrows="4" cols="40" name="repairreason"></textarea>
        </div>
        <div class="remove-center">
            <input type="hidden" name="tramnumber" value="@ViewBag.Tramnumber" readonly />
            <input type="submit" class="remove-tram-button-success" value="Ja" />
            <input class="remove-tram-button-notdone" value="Nee" button data-dismiss="modal" />
        </div>
    </form>
</div>