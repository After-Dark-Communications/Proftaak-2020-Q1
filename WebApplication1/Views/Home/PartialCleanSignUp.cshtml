@model CleaningServiceViewModel

<div>
    <div class="remove-tram-info">
        <h4 class="remove-tram-title">Schoonmaak Aanmelden voor tram @ViewBag.Tramnumber </h4>
    </div>
        <form asp-action="CleanSignUpSend">
            <div class="remove-tram-info">
                <label>Beurt :</label>
                <select name="service" asp-for="CleaningType">
                    <option value="Big">Groot</option>
                    <option value="Small">Klein</option>
                </select>
                <label>Wanneer moet het gebeuren:</label>
                <input type="date" asp-format="{0:dd/MM/yyyy}" asp-for="CleaningDate" />
            </div>
            <div>
                <input type="hidden" asp-for="SectorNumber" value=@ViewBag["DepotTrack"+ViewBag.Tramnumber].Id/>
                <input type="hidden" asp-for="TrackNumber" value=@ViewBag["DepotTrack"+ViewBag.Tramnumber].TrackNumber />
            </div>
            <div class="remove-center">
                <input type="hidden" name="tramnumber" value="@ViewBag.Tramnumber" readonly asp-for="TramNumber" />
                <input type="submit" class="remove-tram-button-success" value="Ja" />
                <input class="remove-tram-button-notdone" value="Nee" button data-dismiss="modal" />
            </div>
        </form>
</div>
        UserViewModel User