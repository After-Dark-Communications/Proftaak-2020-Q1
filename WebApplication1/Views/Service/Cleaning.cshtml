@section Scripts {
    <script type="text/javascript">
    function CleaningDone(_Tramnumber) {
        $.ajax({
            type: "POST",
            url: "/Service/CleaningDone",
            data: { tramnumber: _Tramnumber },
            success: function (response) {
                $('#cleaningconfirmation').html(response);
                $('#modalCleaningDone').modal('show');
            }
        });
    }
    </script>
