@model UserViewModel;
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/LoginScreen.css" />
<body>
    <form class="LoginBox LB-Register" asp-action="Register">
        <!--TODO: FIX layout-->
        <div class="LB-Register-Box">
            <p class="LB-Register-Text">Voornaam </p>
            <p><input id="Username" asp-for="Name" type="text" /></p>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="LB-Register-Box">
            <p class="LB-Register-Text">Achternaam </p>
            <p><input id="Username" asp-for="Surname" type="text" /></p>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="LB-Register-Box">
            <p class="LB-Register-Text">Gebruikers naam</p>
            <p><input id="Username" asp-for="UserName" type="text" /></p>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="LB-Register-Box">
            <p class="LB-Register-Text">Wachtwoord</p>
            <p><input id="PasswordField" asp-for="Password" type="password" /></p>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="LB-Register-Box">
            <p class="LB-Register-Text">Wachtwoord Bevestigen</p>
            <p><input id="PasswordField" asp-for="Password" type="password" /></p>
        </div>
        <p>
            <div class="LB-Register-Box">
                <span class="LB-Register-Text">permissies</span>
                <textarea id="Permissions" rows="2" cols="20" style="width:100%;" asp-for="Permission"></textarea>
                <span asp-validation-for="Permission"></span>
            </div>
        </p>
        <div class="LB-Register_Button">
            <input id="LoginButton" type="submit" value="Register" class="button-default" />
        </div>
    </form>
    <div style="left:50%;margin: auto;margin-top: 1%;width: 25em;">
        <span style="font-weight: bold;">
            @ViewBag.LatestMessage
        </span>
    </div>
</body>
